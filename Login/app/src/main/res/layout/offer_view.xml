        android:background="#fdd58c"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ZobraziÅ¥ viac"
        android:id="@+id/offerDetailsTxt"
        android:layout_below="@+id/offerNameTxt"
        android:layout_alignLeft="@+id/offerNameTxt"
        android:layout_alignStart="@+id/offerNameTxt"
        android:layout_x="110dp"
        android:layout_y="57dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#fdd58c"
        android:clickable="false"
        android:contextClickable="false" />





</AbsoluteLayout>
