<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:id="@+id/imageView2"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="#eeeeee"
        android:clickable="false"
        android:contextClickable="false" />

    <ImageView
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:id="@+id/imageView"
        android:layout_x="0dp"
        android:layout_y="0dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/offerNameTxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="105dp"
        android:background="#eeeeee"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Miesto"
        android:id="@+id/offerPlaceTxt"
        android:background="#000000"
        android:textColor="#FFF"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Price"
        android:id="@+id/offerPriceTxt"
        android:layout_marginRight="5dp"
        android:textColor="#FC6500"
        android:gravity="right"
        android:textStyle="bold"
        android:background="#eeeeee"
        android:layout_above="@+id/offerPlaceTxt"
        android:layout_alignEnd="@+id/offerNameTxt"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ZobraziÅ¥ viac"
        android:id="@+id/offerDetailsTxt"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#eeeeee"
        android:clickable="false"
        android:contextClickable="false"
        android:layout_above="@+id/offerPlaceTxt"
        android:layout_alignStart="@+id/offerNameTxt" />





</RelativeLayout>
